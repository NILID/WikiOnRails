= bootstrap_form_for [@page, @section] do |f|
  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |message|
          %li= message

  = f.globalize_fields_for locale do |g|
    .form-group
      = g.label :name, Section.human_attribute_name(:name)
      ~ g.text_field :name, class: 'form-control'

    .form-group
      = g.label :content, Section.human_attribute_name(:content)
      ~ g.text_area :content, class: 'form-control'

  = f.submit 'Save'
