= bootstrap_form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |message|
          %li= message

  = f.globalize_fields_for locale do |g|
    = g.label :name, Page.human_attribute_name(:name)
    ~ g.text_field :name

  .actions
    = f.submit 'Save'
